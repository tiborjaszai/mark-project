<!DOCTYPE html>
<html lang="{{ context.appConfig.site.locale }}">
    <head>
        <meta charset="{{ context.appConfig.encoding }}">
        {% block meta %}{% endblock %}

        <title>{{ node.title ?? context.appConfig.site.title }}</title>

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <h1>{{ node.title }}</h1>

        {{ node.content }}

        <h2>Files:</h2>

        <ul>
            {% for collection in context.collections %}
                {% for item in collection.items %}
                    <li>{{ item.relativePathname }}</li>
                {% endfor %}
            {% endfor %}
        </ul>

        {% block javascripts %}{% endblock %}
    </body>
</html>